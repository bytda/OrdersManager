@page "{id:int?}"
@model RazorPages.Pages.Movies.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление заказа</h1>

<h3>Вы уверены, что хотите удалить заказ?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.StartCity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.StartCity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.StartAdress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.StartAdress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.FinishCity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.FinishCity)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.FinishAdress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.FinishAdress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Date)
        </dd>

    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Order.ID" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-page="./Index">Вернуться к заказам</a>
    </form>
</div>
